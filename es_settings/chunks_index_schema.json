{
  "settings": {
    "index": {
      "knn": true,
      "knn.algo_param.ef_search": 100
    }
  },
  "mappings": {
    "properties": {
      "text": { "type": "text" },
      "metadata": {
        "type": "nested",
        "properties": {
          "document_id": { "type": "keyword" },
          "source_id": { "type": "keyword" },
          "author": { "type": "text" },
          "url": { "type": "text" },
          "created_at": { "type": "keyword" }
        }
      },
      "embedding": {
        "type": "knn_vector",
        "dimension": "{{:dimension}}",
        "method": {
          "name": "hnsw",
          "space_type": "{{:space_type}}",
          "engine": "nmslib",
          "parameters": {
            "ef_construction": "{{:ef_construction}}",
            "m": "{{:m}}"
          }
        }
      }
    }
  }
}